<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackback"
    tools:context=".TopGiftersActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="255dp"
            android:layout_height="57dp"
            android:fontFamily="@font/noir_pro_semibold"
            android:gravity="center"
            android:text="Broadcast Ended"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.089" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eyeViewIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/eye_icon_views"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="232dp" />

                <TextView
                    android:id="@+id/textViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/noir_pro_regular"
                    android:text="23.3K"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="2dp"
                    android:src="@drawable/coin_icon_currency" />

                <TextView
                    android:id="@+id/textCurrencyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/noir_pro_regular"
                    android:text="445K"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/time_icon_information" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/noir_pro_regular"
                    android:text="00:00:45"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/cardbackgroundgrey"
            app:cardCornerRadius="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageTargetIconArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/target_icon_arrow" />

                <LinearLayout
                    android:layout_width="181dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textCard1View1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noir_pro_regular"
                        android:text="Great!!!"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textCard1View2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noir_pro_regular"
                            android:text="only"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="2dp"
                            android:padding="3dp"
                            android:src="@drawable/coin_icon_currency" />

                        <TextView
                            android:id="@+id/textCard1View3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/noir_pro_regular"
                            android:text="456"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textCard1View4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/noir_pro_regular"
                            android:text="left to get"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textCard1View5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/noir_pro_regular"
                            android:text="\u20B95K"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonCard1OKAY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/noir_pro_regular"
                    android:padding="2dp"
                    android:text="OK"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textCard2View"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/cardbackgroundgrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"/>

        <TextView
            android:id="@+id/textCard2View2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noir_pro_regular"
            android:text="Top Gifters"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="@+id/textCard2View"
            app:layout_constraintStart_toStartOf="@+id/textCard2View"
            app:layout_constraintTop_toTopOf="@+id/textCard2View" />


        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/textCard2View"
            app:layout_constraintStart_toStartOf="@+id/textCard2View"
            app:layout_constraintTop_toBottomOf="@+id/textCard2View2">

            <FrameLayout
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal|bottom">

                <ImageView
                    android:id="@+id/imageUser1Avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/user1_avatar" />

                <ImageView
                    android:id="@+id/imageRank1Number"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/number_1_rank" />

            </FrameLayout>

            <ImageView
                android:id="@+id/imageCrownRank1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|end"
                android:rotation="40"
                android:src="@drawable/crown_rank_1"
                tools:layout_editor_absoluteX="309dp"
                tools:layout_editor_absoluteY="28dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="@+id/textCard2View"
            app:layout_constraintStart_toStartOf="@+id/textCard2View">

            <ImageView
                android:id="@+id/imageUser2Avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/user2_avatar" />

            <ImageView
                android:id="@+id/imageRank2Number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/number_2_rank" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="@+id/textCard2View"
            app:layout_constraintEnd_toEndOf="@+id/textCard2View">

            <ImageView
                android:id="@+id/imageUser3Avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/user3_avatar" />

            <ImageView
                android:id="@+id/imageRank3Number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/number_3_rank" />

        </FrameLayout>

        <TextView
            android:id="@+id/textRank1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noir_pro_regular"
            android:text="Shikha Jas"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="@+id/frameLayout"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textRank1Name"
            app:layout_constraintStart_toStartOf="@+id/textRank1Name"
            app:layout_constraintTop_toBottomOf="@+id/textRank1Name">

            <ImageView
                android:id="@+id/imageRank1Currency"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/coin_icon_currency"/>

            <TextView
                android:id="@+id/textRank1Currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1280"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/noir_pro_regular"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textRank2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noir_pro_regular"
            android:gravity="center"
            android:text="Ms. Bean"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
            app:layout_constraintStart_toStartOf="@+id/frameLayout2"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textRank2Name"
            app:layout_constraintStart_toStartOf="@+id/textRank2Name"
            app:layout_constraintTop_toBottomOf="@+id/textRank2Name">

            <ImageView
                android:id="@+id/imageRank2Currency"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/coin_icon_currency"/>

            <TextView
                android:id="@+id/textRank2Currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="589"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/noir_pro_regular"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textRank3Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noir_pro_regular"
            android:gravity="center"
            android:text="Romeo bhai"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout3"
            app:layout_constraintStart_toStartOf="@+id/frameLayout3"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textRank3Name"
            app:layout_constraintStart_toStartOf="@+id/textRank3Name"
            app:layout_constraintTop_toBottomOf="@+id/textRank3Name">

            <ImageView
                android:id="@+id/imageRank3Currency"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/coin_icon_currency"/>

            <TextView
                android:id="@+id/textRank3Currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/noir_pro_regular"
                android:textColor="@color/white"/>

        </LinearLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/lightgreyback"
            android:padding="2dp"
            android:text="View All"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textCard2View"
            app:layout_constraintEnd_toEndOf="@+id/textCard2View"
            app:layout_constraintStart_toStartOf="@+id/textCard2View" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>