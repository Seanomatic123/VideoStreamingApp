<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDetailActivity">

    <ImageButton
        android:id="@+id/profilePrevScreen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/whitebackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:tint="@color/blacktext" />

    <ImageView
        android:id="@+id/imageProfileView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a" />

    <TextView
        android:id="@+id/textProfileNameView"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="NAME"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageProfileView"
        app:layout_constraintStart_toEndOf="@+id/imageProfileView"
        app:layout_constraintTop_toTopOf="@+id/imageProfileView"
        app:layout_constraintVertical_bias="0.186" />

    <TextView
        android:id="@+id/textProfileEmailView"
        android:layout_width="224dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="EMAIL"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageProfileView"
        app:layout_constraintStart_toEndOf="@+id/imageProfileView"
        app:layout_constraintTop_toBottomOf="@+id/textProfileNameView" />

    <TextView
        android:id="@+id/textProfileDescriptionView"
        android:layout_width="361dp"
        android:layout_height="361dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="DESCRIPTION"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProfileView"
        app:layout_constraintVertical_bias="0.112" />
</androidx.constraintlayout.widget.ConstraintLayout>